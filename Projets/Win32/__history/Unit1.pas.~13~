unit Unit1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.ToolWin, Vcl.ComCtrls, Vcl.Menus,
  Vcl.StdCtrls, Vcl.ExtCtrls, Vcl.JumpList, System.Win.TaskbarCore, Vcl.Taskbar,
  Vcl.TitleBarCtrls;

type
  TForm1 = class(TForm)
    Saisie1: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    Saisie2: TEdit;
    Bouton_Ajouter: TButton;
    Bouton_Multiplier: TButton;
    Bouton_Soustraire: TButton;
    Bouton_Diviser: TButton;
    Label3: TLabel;
    procedure Button1Click(Sender: TObject);
  private
    { Déclarations privées }
  public
    { Déclarations publiques }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);

var numero1, numero2, resultat : integer;
begin

//INPUT

numero1 := StrToInt(Saisie1.Text);
numero2 := StrToInt(Saisie2.Text);
resultat := numero1 + numero2;
Label3.Caption := IntToStr(resultat);

//PROCESS

//OUTPUT

end;

end.

