{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);

var numero1, numero2, resultat : integer ;
begin

numero1 := StrToInt(saisie_1.Text) ;
numero2 := StrToInt(saisie_2.Text) ;
resultat := numero1 + numero2 ;


lblResult.Caption := IntToStr(resultat) ;


end;

end.

