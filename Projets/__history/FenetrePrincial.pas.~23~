unit FenetrePrincial;

interface

uses
  Windows, Messages, SysUtils, Variants, Classes, Graphics, Controls, Forms,
  Dialogs, StdCtrls;

type
  TfrmFenetrePrincial = class(TForm)
    edtDisplay: TEdit;
    btnNum0: TButton;
    btnNum1: TButton;
    btnNum2: TButton;
    btnNum3: TButton;
    btnNum4: TButton;
    btnNum5: TButton;
    btnNum6: TButton;
    btnNum7: TButton;
    btnNum8: TButton;
    btnNum9: TButton;
    btnAdd: TButton;
    btnSubtract: TButton;
    btnMultiply: TButton;
    btnDivide: TButton;
    btnEquals: TButton;
    btnClear: TButton;
    procedure btnNum0Click(Sender: TObject);
    procedure btnNum1Click(Sender: TObject);
    procedure btnNum2Click(Sender: TObject);
    procedure btnNum3Click(Sender: TObject);
    procedure btnNum4Click(Sender: TObject);
    procedure btnNum5Click(Sender: TObject);
    procedure btnNum6Click(Sender: TObject);
    procedure btnNum7Click(Sender: TObject);
    procedure btnNum8Click(Sender: TObject);
    procedure btnNum9Click(Sender: TObject);
    procedure btnAddClick(Sender: TObject);
    procedure btnSubtractClick(Sender: TObject);
    procedure btnMultiplyClick(Sender: TObject);
    procedure btnDivideClick(Sender: TObject);
    procedure btnEqualsClick(Sender: TObject);
    procedure btnClearClick(Sender: TObject);
  private
    { Déclarations privées }
    FCurrentValue: Double;
    FOperator: Char;
    FLastButtonWasOperator: Boolean;
    procedure AppendDigit(const ADigit: Char);
    procedure SetOperator(const AOperator: Char);
    procedure Calculate;
  public
    { Déclarations publiques }
  end;

var
  frmCalculator: TfrmCalculator;

implementation

{$R *.dfm}

procedure TfrmCalculator.AppendDigit(const ADigit: Char);
begin
  if FLastButtonWasOperator then
  begin
    edtDisplay.Text := '';
    FLastButtonWasOperator := False;
  end;
  edtDisplay.Text := edtDisplay.Text + ADigit;
end;

procedure TfrmCalculator.btnAddClick(Sender: TObject);
begin
  SetOperator('+');
end;

procedure TfrmCalculator.btnClearClick(Sender: TObject);
begin
  FCurrentValue := 0;
  FOperator := #0;
  FLastButtonWasOperator := False;
  edtDisplay.Text := '';
end;

procedure TfrmCalculator.btnDivideClick(Sender: TObject);
begin
  SetOperator('/');
end;

procedure TfrmCalculator.btnEqualsClick(Sender: TObject);
begin
  Calculate;
end;

procedure TfrmCalculator.btnMultiplyClick(Sender: TObject);
begin
  SetOperator('*');
end;

procedure TfrmCalculator.btnNum0Click(Sender: TObject);
begin
  AppendDigit('0');
end;

procedure TfrmCalculator.btnNum1Click(Sender: TObject);
begin
  AppendDigit('1');
end

procedure TForm2.bouton0Click(Sender: TObject);
begin
  AppendDigit('0');
end;

procedure TForm2.bouton1Click(Sender: TObject);
begin
  AppendDigit('1');

end;

procedure TForm2.bouton2Click(Sender: TObject);
begin
  AppendDigit('2');
end;

procedure TForm2.bouton3Click(Sender: TObject);
begin
 AppendDigit('3');
end;

end.

procedure TForm2.bouton4Click(Sender: TObject);
begin
  AppendDigit('4');
end;

procedure TForm2.bouton5Click(Sender: TObject);
begin
  AppendDigit('5');
end;

procedure TForm2.bouton6Click(Sender: TObject);
begin
  AppendDigit('6');
end;

procedure TForm2.bouton7Click(Sender: TObject);
begin
  AppendDigit('7');
end;

procedure TForm2.bouton8Click(Sender: TObject);
begin
  AppendDigit('8');
end;

procedure TForm2.bouton9Click(Sender: TObject);
begin
  AppendDigit('9');
end;


